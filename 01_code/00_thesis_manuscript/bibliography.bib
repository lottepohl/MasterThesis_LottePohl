author = {Yamada, Makoto and Suzuki, Taiji and Kanamori, Takafumi and Hachiya, Hirotaka and Sugiyama, Masashi},
pages = {1324-1370},
url = {http://dx.doi.org/10.1162/{NECO\_a\_00442}},
