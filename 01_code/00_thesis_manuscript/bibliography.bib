@article{espinoza_2016,
title = {Evidence of partial migration in a large coastal predator: opportunistic foraging and reproduction as key drivers?},
author = {Espinoza, Mario and Heupel, Michelle R and Tobin, Andrew J and Simpfendorfer, Colin A},
pages = {e0147608},
url = {http://dx.doi.org/10.1371/journal.pone.0147608},
