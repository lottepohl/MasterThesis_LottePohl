@article{setyawan_2022,
title = {Residency and Use of an Important Nursery Habitat, Raja Ampat\textquoterights Wayag Lagoon, by Juvenile Reef Manta Rays (Mobula alfredi)},
author = {Setyawan, Edy and Erdmann, Mark V. and Mambrasar, Ronald and Hasan, Abdi W. and Sianipar, Abraham B. and Constantine, Rochelle and Stevenson, Ben C. and Jaine, Fabrice R. A.},
