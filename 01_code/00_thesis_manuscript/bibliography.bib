@article{goossens_2022,
title = {Taking the time for range testing: an approach to account for temporal resolution in acoustic telemetry detection range assessments},
author = {Goossens, Jolien and Buyse, Jolien and Bruneel, Stijn and Verhelst, Pieterjan and Goethals, Peter and Torreele, Els and Moens, Tom and Reubens, Jan},
pages = {17},
url = {https://animalbiotelemetry.biomedcentral.com/articles/10.1186/s40317-022-00290-2},
