abstract = {The objective of change-point detection is to discover abrupt property changes lying behind time-series data. In this paper, we present a novel statistical change-point detection algorithm based on non-parametric divergence estimation between time-series samples from two retrospective segments. Our method uses the relative Pearson divergence as a divergence measure, and it is accurately and efficiently estimated by a method of direct density-ratio estimation. Through experiments on artificial and real-world datasets including human-activity sensing, speech, and Twitter messages, we demonstrate the usefulness of the proposed method. Copyright \copyright 2013 Elsevier Ltd. All rights reserved.}
}
@article{gurarie_2009,
title = {A novel method for identifying behavioural changes in animal movement data.},
author = {Gurarie, Eliezer and Andrews, Russel D and Laidre, Kristin L},
pages = {395-408},
url = {http://dx.doi.org/10.1111/j.1461-0248.2009.01293.x},
year = {2009},
