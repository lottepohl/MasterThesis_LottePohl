@article{kristensen_2019,
title = {Migration routes and habitat use of a highly adaptable salmonid (sea trout, Salmo trutta) in a complex marine area},
author = {Kristensen, Martin Lykke and Pedersen, Martin W\aever and Thygesen, Uffe H\ogsbro and del Villar-Guerra, Diego and Baktoft, Henrik and Aarestrup, Kim},
