@article{lecorre_2014,
title = {Detecting changes in the annual movements of terrestrial migratory species: using the first-passage time to document the spring migration of caribou.},
author = {Le Corre, Mael and Dussault, Christian and Côté, Steeve D},
pages = {19},
url = {http://dx.doi.org/10.1186/s40462-014-0019-0},
