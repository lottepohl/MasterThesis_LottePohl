@article{vanderknaap_2022,
title = {Effects of pile driving sound on local movement of free-ranging Atlantic cod in the Belgian North Sea.},
author = {van der Knaap, Inge and Slabbekoorn, Hans and Moens, Tom and Van den Eynde, Dries and Reubens, Jan},
